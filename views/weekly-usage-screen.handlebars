

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weekly water usage screen</title>
    <link rel="stylesheet" href="weekly-usage-screen.css">

</head>

<body>

    <form action="weekly-usage-screen" method="post">
    
    <div class="style screen-1">
    
        <h1>This is your Weekly Water Usage Page</h1>


        <div class="myChart" style="width: 700px; height: 700px;">
            <canvas id="myChart"></canvas>


          </div>
           
        </form>

</body>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // === include 'setup' then 'config' above ===

const labels = [
    'Monday',
    'Tuesday',
    'Wednesday',
    'Thursday',
    'Friday',
    'Saturday',
    'Sunday'];


    const data = {
  labels: labels,
  datasets: [{
    label: 'Week water usage',
    data: [300, 50, 100, 200, 150, 250, 350],
    backgroundColor: [
      'rgb(7, 8, 58)',
      'rgb(23, 14, 138)',
      'rgb(18, 80, 214)',
      'rgb(54, 164, 238)',
      'rgb(34, 118, 124) ',
      'rgb(14, 134, 98)',
      'rgb(24, 221, 123)'
    ],
    hoverOffset: 4
  }]
};

const config = {
  type: 'bar',
  data: data,
};
  
    const myChart = new Chart(
      document.getElementById('myChart'),
      config
    );

  
  </script>

</html>